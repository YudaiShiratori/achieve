                <a class="navbar-brand" href="#">miniBlog</a>
              </div>
              <div id="gnavi" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                  <li><%= link_to "TOP", tops_path %></li>
                  <li><%= link_to "一覧", blogs_path %></li>
                  <li><%= link_to "投稿", new_blog_path %></li>
                  <li><%= link_to "お問い合わせ", new_contact_path %></li>
                </ul>
              </div>
            </div>
          </nav>
        </header>
  
      
      
      <%= yield %>
      
      <footer class="fixed-bottom">
        <p>白鳥雄大</p>
      </footer>
      
    </div>
