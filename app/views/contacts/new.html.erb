<h1>お問い合わせ</h1>

<%= form_with(model:@contact, local:true) do |form| %>

  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h1><%= @contact.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
    <div class="name">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="email">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    <div class="content">
      <%= form.label :content %>
      <%= form.text_field :content %>
    </div>
    <br>
  <%= form.submit %>
<% end %>
</div>

<%= notice %>