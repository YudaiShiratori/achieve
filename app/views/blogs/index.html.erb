<h1>ブログ一覧</h1>

<p><%= notice %></p>

<div class="table-responsive">
  <table class="table">
      <tr>
          <th>タイトル</th>
      </tr>
  
  
   <% @blogs.each do |blog| %>
     <tr>
       <td><%= blog.title %></td>
       <td><%= link_to '詳細', blog_path(blog.id) %></td>
       <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
       <td><%= link_to '削除', blog_path(blog.id), method: :delete,
            data:{confirm:'このブログを削除してよろしいですか？'} %></td>
     </tr>
   <% end %>
  </table>
</div>

  
<%= link_to '新規作成', 'blogs/new' %>

